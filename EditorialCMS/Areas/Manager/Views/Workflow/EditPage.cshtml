@model Piranha.Extend.Blocks.PageBlock
@{
    ViewData["Title"] = "Editar Página com Workflow";
    var stage = ViewBag.Stage as string;
}

<h2>Editar Página</h2>
<p><strong>Estado atual:</strong> @stage</p>

<form method="post" asp-area="Manager" asp-controller="Workflow" asp-action="EditPage">
    <input type="hidden" name="id" value="@Model.Id" />

    <div class="form-group">
        <label>Título</label>
        <input type="text" name="title" class="form-control" value="@Model.GetTitle" />
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Success"]</div>
}