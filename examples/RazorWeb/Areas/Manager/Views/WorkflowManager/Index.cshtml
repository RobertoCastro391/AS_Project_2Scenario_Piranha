@model List<Piranha.Editorial.ViewModels.PageWorkflowStatusViewModel>

@{
    ViewData["Title"] = "Estado Editorial das Páginas";
    var grouped = Model.GroupBy(p => p.SiteName).OrderBy(g => g.Key);
}

<div class="m-4">
    <div class="top">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Conteúdo</li>
                <li class="breadcrumb-item active" aria-current="page">Estado Editorial das Páginas</li>
            </ol>
        </nav>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="sitemap">
                    <ol>
                        @foreach (var group in grouped)
                        {
                            <li>
                                <div class="sitemap-item">
                                    <div class="handle"><i class="fas fa-globe"></i></div>
                                    <div class="link">
                                        <span class="title">@group.Key</span>
                                    </div>
                                </div>

                                <div class="sitemap sitemap-container dd">
                                    <ol class="dd-list">
                                        @foreach (var item in group)
                                        {
                                            <li class="dd-item">
                                                <div class="sitemap-item mb-4">
                                                    <div class="handle"><i class="fas fa-file-alt"></i></div>
                                                    <div class="link d-flex flex-column justify-content-center w-100">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div>
                                                                <span class="title">@item.Title</span><br />
                                                                <small class="text-muted">
                                                                    Atualizado: @item.Created.ToString("HH:mm - dd/MM/yyyy")
                                                                </small>
                                                            </div>
                                                            <div class="badge bg-info align-self-center text-bold">
                                                                @item.WorkflowStage
                                                            </div>
                                                        </div>

                                                        @if (item.History?.Any() == true)
                                                        {
                                                            <table class="table table-sm table-bordered mt-3 mb-0">
                                                                <thead class="table-light">
                                                                    <tr>
                                                                        <th>Ação</th>
                                                                        <th>De</th>
                                                                        <th>Para</th>
                                                                        <th>Por</th>
                                                                        <th>Data</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @foreach (var h in item.History)
                                                                    {
                                                                        <tr>
                                                                            <td>@h.Action</td>
                                                                            <td>@h.FromStatus</td>
                                                                            <td>@h.ToStatus</td>
                                                                            <td>@h.UserId</td>
                                                                            <td>@h.Timestamp.ToString("HH:mm dd/MM/yyyy")</td>
                                                                        </tr>
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        }
                                                        else
                                                        {
                                                            <small class="text-muted mt-2">Sem histórico editorial.</small>
                                                        }
                                                    </div>
                                                </div>
                                            </li>
                                        }
                                    </ol>
                                </div>
                            </li>
                        }
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
